@using Final.ViewModel;
@model SkillViewModel

@{
    Layout = "_UserDataLayout";
    ViewData["Title"] = "Skill";
}

<h1>Skills</h1>
<hr />
<div class="row">
    <div class="col-md-12"style="height:auto" >
        
        <form asp-action="Experience" asp-controller="userdata">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex flex-wrap" id="RadioBtn">
                <div class="col-md-6 flex-wrap">
                    <div class="form-group col-md-6">
                        <label asp-for="SkillName" class="control-label"></label>
                        <input asp-for="SkillName" id="SkillName" class="form-control" style="width:100%" />
                        <span asp-validation-for="SkillName" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6" style="padding:20px 0;">
                        <label asp-for="Level" class="control-label"></label>
                        <input asp-for="Level" type="range" min="20" max="100" step="20" value="20" style="width:100%" />
                        <span asp-validation-for="Level" class="text-danger"></span>
                    </div>
               </div>


                <div class="form-group">

                    <input hidden type="text" value="@Model.Address" style="height: 140px;width: 450px;" asp-for="Address" class="form-control"></input>

                </div>
                <div class="form-group">

                    <input hidden type="text" value="@Model.Phone" style="height: 140px;width: 450px;" asp-for="Phone" class="form-control"></input>

                </div>
                <div class="form-group">

                    <input hidden type="text" value="@Model.Photo" style="height: 140px;width: 450px;" asp-for="Photo" class="form-control"></input>

                </div>
                <div class="form-group">

                    <input hidden type="text" value="@Model.Name" style="height: 140px;width: 450px;" asp-for="Name" class="form-control"></input>

                </div>
                <div class="form-group">

                    <input hidden type="text" value="@Model.Email" style="height: 140px;width: 450px;" asp-for="Email" class="form-control"></input>

                </div>
                <div class="form-group">

                    <input hidden type="text" value="@Model.JobTitle" style="height: 140px;width: 450px;" asp-for="JobTitle" class="form-control"></input>

                </div>
                <div class="form-group">

                    <input hidden type="text" value="@Model.CoverLetter" style="height: 140px;width: 450px;" asp-for="CoverLetter" class="form-control"></input>

                </div>
            </div>
    
  
            <div class="form-group">
                <br />
            
                <input type="button"  value="Add"  id="add"     class="btn btn-primary" />
             
                <input type="submit"  value="Next"   name="submit" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        var count = 0;
        
        document.getElementById("add").addEventListener('click', function AddSkill() {
            if(count < 5){ 
            document.getElementById("RadioBtn").innerHTML +=
                `

                                  <div class="col-md-6">
                                    <div class="form-group col-md-6" style="margin-top : 10px>
                                <label asp-for="Name" class="control-label">Name</label>
                                <input asp-for="Name" id="Name" class="form-control" style=""/>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                                    <div class="form-group col-md-6" style="padding:20px; margin-left:-17px">
                                <label asp-for="Level" class="control-label">Level</label>
                                 <input asp-for="Level" type="range" min="20" max="100" step="20" value="20"  />
                                <span asp-validation-for="Level" class="text-danger"></span>
                            </div>
                          </div>`


        
        }
            count++;
    })
         
    

        
    </script>
}
