@model Final.Models.Experience

@{
    Layout = "_UserDataLayout";
    ViewData["Title"] = "Experience";
}

<h1>Experience</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Experience">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label asp-for="CompanyName" class="control-label"></label>
                <input asp-for="CompanyName" class="form-control" style="width:250px" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobTitle" class="control-label"></label>
                <input asp-for="JobTitle" class="form-control"  style="width:250px"/>
                <span asp-validation-for="JobTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" style="width:250px" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control"  style="width:250px"/>
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <textarea asp-for="Details" class="form-control" style="height: 140px;width: 450px;"></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            
            <div class="row" id="RadioBtn">
                <div class="col-md-4">
                </div>
            </div>

            <div class="form-group">
                <br />

                <input type="button" value="Add" onclick="AddExperience()" name="submit" class="btn btn-primary" />

                <input type="submit"  value="Next"   name="submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function AddExperience() {
            document.getElementById("RadioBtn").insertAdjacentHTML("afterbegin",
                `
