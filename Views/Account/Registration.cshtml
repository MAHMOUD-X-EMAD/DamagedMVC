@model Final.ViewModel.RegisterationViewModel

@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Registration";
}

<h1>Registration</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Registration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="width:25rem ; margin-bottom:20px">
                <label asp-for="UserNAme" class="control-label"></label>
                <input asp-for="UserNAme" class="form-control" />
                <span asp-validation-for="UserNAme" class="text-danger"></span>
            </div>
            <div class="form-group" style="width:25rem ; margin-bottom:20px">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group" style="width:25rem ; margin-bottom:20px">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group" style="width:25rem ; margin-bottom:20px">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group" style="width:25rem ; margin-bottom:20px">
                <input type="submit" value="Register" class="btn btn-primary" style="padding:10px; width:15rem;margin-bottom:20px"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Login" asp-controller="Account" style="padding:10px; width:10rem; background-color:coral; color:white">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
